<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui/designer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Modpack_Installer.Gui.Views.MainWindow"
        Title="Minecraft Modpack Installer"
        Width="480" Height="360"
        CanResize="False"
        Background="#1e1e1e"
        Foreground="White">

	<Grid RowDefinitions="Auto,Auto,Auto,*,Auto,Auto,Auto" Margin="20">

		<!-- URL Input -->
		<TextBlock Text="Modpack URL:" FontSize="14" Grid.Row="0" Margin="0,0,0,4"/>
		<TextBox Grid.Row="1"
                 Text="{Binding ModpackUrl, Mode=TwoWay}"
                 Background="#2b2b2b"
                 BorderBrush="#555"
                 Watermark="http://mrgidor.github.io/downloads/DarkRL-Modpack.zip" />

		<!-- Delete/Backup Switch -->
		<StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,16,0,0" VerticalAlignment="Center">
			<TextBlock Text="Backup current mods folder?" VerticalAlignment="Center" />
			<ToggleSwitch IsChecked="{Binding BackupMods}" Margin="12,0,0,0" />
		</StackPanel>

		<!-- Warning -->
		<TextBlock Grid.Row="3" Margin="0,16,0,0"
                   TextWrapping="Wrap"
                   Foreground="#ff6666"
                   FontSize="12"
                   Text="âš  Only download modpacks from trusted sources. We do not provide any warranty when using this program." />

		<!--  Command="{Binding DownloadCommand}" -->
		<Button x:Name="DownloadButton" Command="{Binding DownloadCommand}" IsEnabled="{Binding IsNotDownloading, ConverterParameter=True, FallbackValue=True}" Grid.Row="4" Content="Download" HorizontalAlignment="Center" Width="150" Height="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#007acc"/>

		<!-- Progress Bar -->
		<ProgressBar x:Name="DownloadProgress" Grid.Row="5" Margin="0,12,0,0" Minimum="0" Maximum="100" Height="8" Value="{Binding Progress}"/>

		<!-- Disclaimer -->
		<TextBlock Text="Licensed under the MIT license." FontSize="12" Grid.Row="6" Margin="0,10,0,0"/>
		
	</Grid>
</Window>
